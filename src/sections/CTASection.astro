---
// Secci√≥n Call to Action
---

<section class="cta-section relative py-24 bg-white overflow-hidden">
    <!-- Decorative background -->
    <div class="absolute inset-0">
        <div class="absolute top-0 left-0 w-full h-full opacity-5" style="background-image: linear-gradient(45deg, #ff6b35 1px, transparent 1px), linear-gradient(-45deg, #ff6b35 1px, transparent 1px); background-size: 60px 60px;"></div>
    </div>

    <!-- Orange accent shapes -->
    <div class="absolute top-20 right-0 w-96 h-96 bg-[#ff6b35]/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 left-0 w-96 h-96 bg-blue-500/10 rounded-full blur-3xl"></div>

    <div class="container-custom relative z-10 px-6 md:px-12">
        <!-- Main CTA card -->
        <div class="max-w-5xl mx-auto">
            <div class="relative bg-gradient-to-br from-[#0a1628] via-[#162847] to-[#0a1628] rounded-3xl overflow-hidden border-4 border-[#ff6b35] shadow-2xl">
                <!-- Grid overlay -->
                <div class="absolute inset-0 opacity-5" style="background-image: linear-gradient(white 1px, transparent 1px), linear-gradient(90deg, white 1px, transparent 1px); background-size: 30px 30px;"></div>

                <!-- Animated corner accents -->
                <div class="absolute top-0 left-0 w-32 h-32 border-l-4 border-t-4 border-[#ff6b35] animate-pulse"></div>
                <div class="absolute bottom-0 right-0 w-32 h-32 border-r-4 border-b-4 border-[#ff6b35] animate-pulse" style="animation-delay: 1s;"></div>

                <div class="relative z-10 p-12 md:p-16 text-center">
                    <!-- Badge -->
                    <div class="inline-block mb-6">
                        <span class="bg-[#ff6b35] text-white font-mono text-xs font-bold tracking-wider uppercase px-6 py-2 rounded-full">
                            Get Started Today
                        </span>
                    </div>

                    <!-- Headline -->
                    <h2 class="text-4xl md:text-6xl font-bold text-white mb-6 leading-tight">
                        Ready to Ship
                        <span class="block text-[#ff6b35]">Anywhere?</span>
                    </h2>

                    <!-- Subheadline -->
                    <p class="text-xl text-gray-300 max-w-2xl mx-auto mb-10 leading-relaxed">
                        Get instant quotes, track shipments in real-time, and experience hassle-free logistics. Join thousands of satisfied customers worldwide.
                    </p>

                    <!-- CTA Buttons -->
                    <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
                        <button class="cta-button-primary group">
                            <span>Request a Quote</span>
                            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                            </svg>
                        </button>
                        <button class="cta-button-secondary group">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                            </svg>
                            <span>Call: +1 (800) 123-4567</span>
                        </button>
                    </div>

                    <!-- Features grid -->
                    <div class="grid md:grid-cols-3 gap-6 max-w-3xl mx-auto pt-8 border-t border-gray-700">
                        <div class="flex items-center gap-3 justify-center">
                            <div class="w-10 h-10 bg-[#ff6b35] rounded-lg flex items-center justify-center flex-shrink-0">
                                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                </svg>
                            </div>
                            <span class="text-gray-300 font-semibold">Instant quotes</span>
                        </div>
                        <div class="flex items-center gap-3 justify-center">
                            <div class="w-10 h-10 bg-[#ff6b35] rounded-lg flex items-center justify-center flex-shrink-0">
                                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                </svg>
                            </div>
                            <span class="text-gray-300 font-semibold">Real-time tracking</span>
                        </div>
                        <div class="flex items-center gap-3 justify-center">
                            <div class="w-10 h-10 bg-[#ff6b35] rounded-lg flex items-center justify-center flex-shrink-0">
                                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                </svg>
                            </div>
                            <span class="text-gray-300 font-semibold">24/7 support</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Contact information cards -->
        <div class="grid md:grid-cols-3 gap-6 mt-16 max-w-5xl mx-auto">
            <!-- Email -->
            <div class="contact-card bg-white rounded-xl p-6 border-2 border-gray-200 hover:border-[#ff6b35] transition-all group text-center">
                <div class="w-14 h-14 bg-gray-100 group-hover:bg-[#ff6b35] rounded-xl flex items-center justify-center mx-auto mb-4 transition-all">
                    <svg class="w-7 h-7 text-gray-900 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                </div>
                <h3 class="font-bold text-gray-900 mb-2">Email Us</h3>
                <p class="text-sm text-gray-600 mb-2">Send us your inquiry</p>
                <a href="mailto:info@roottsroutes.com" class="text-[#ff6b35] font-semibold hover:underline">
                    info@roottsroutes.com
                </a>
            </div>

            <!-- Phone -->
            <div class="contact-card bg-white rounded-xl p-6 border-2 border-gray-200 hover:border-[#ff6b35] transition-all group text-center">
                <div class="w-14 h-14 bg-gray-100 group-hover:bg-[#ff6b35] rounded-xl flex items-center justify-center mx-auto mb-4 transition-all">
                    <svg class="w-7 h-7 text-gray-900 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                </div>
                <h3 class="font-bold text-gray-900 mb-2">Call Us</h3>
                <p class="text-sm text-gray-600 mb-2">Available 24/7</p>
                <a href="tel:+18001234567" class="text-[#ff6b35] font-semibold hover:underline">
                    +1 (800) 123-4567
                </a>
            </div>

            <!-- Office -->
            <div class="contact-card bg-white rounded-xl p-6 border-2 border-gray-200 hover:border-[#ff6b35] transition-all group text-center">
                <div class="w-14 h-14 bg-gray-100 group-hover:bg-[#ff6b35] rounded-xl flex items-center justify-center mx-auto mb-4 transition-all">
                    <svg class="w-7 h-7 text-gray-900 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                </div>
                <h3 class="font-bold text-gray-900 mb-2">Visit Us</h3>
                <p class="text-sm text-gray-600 mb-2">Main headquarters</p>
                <p class="text-[#ff6b35] font-semibold">
                    Madrid, Spain
                </p>
            </div>
        </div>

        <!-- Trust badges -->
        <div class="mt-12 text-center">
            <p class="text-gray-500 text-sm mb-6">Trusted by leading companies worldwide</p>
            <div class="flex flex-wrap justify-center items-center gap-8 opacity-50">
                <div class="text-gray-400 font-bold text-xl">Company A</div>
                <div class="text-gray-400 font-bold text-xl">Company B</div>
                <div class="text-gray-400 font-bold text-xl">Company C</div>
                <div class="text-gray-400 font-bold text-xl">Company D</div>
            </div>
        </div>
    </div>
</section>

<style>
    .container-custom {
        max-width: 1400px;
        margin: 0 auto;
    }

    .cta-button-primary {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);
        color: white;
        padding: 1.25rem 2.5rem;
        border-radius: 0.75rem;
        font-weight: 700;
        font-size: 1.125rem;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 8px 30px rgba(255, 107, 53, 0.4);
    }

    .cta-button-primary:hover {
        transform: translateY(-3px);
        box-shadow: 0 12px 40px rgba(255, 107, 53, 0.6);
    }

    .cta-button-secondary {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        background: white;
        color: #0a1628;
        padding: 1.25rem 2.5rem;
        border-radius: 0.75rem;
        font-weight: 700;
        font-size: 1.125rem;
        border: 2px solid white;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .cta-button-secondary:hover {
        background: transparent;
        color: white;
        border-color: white;
        transform: translateY(-3px);
    }

    .contact-card {
        transition: all 0.3s ease;
    }

    .contact-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }
</style>
