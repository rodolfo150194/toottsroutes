---
import { Icon } from "astro-icon/components";

const currentYear = new Date().getFullYear();

const services = [
  { name: "Transporte Maritimo", href: "#servicios" },
  { name: "Transporte Aereo", href: "#servicios" },
  { name: "Transporte Terrestre", href: "#servicios" },
  { name: "Almacenamiento", href: "#servicios" },
  { name: "Cadena de Frio", href: "#servicios" },
];

const company = [
  { name: "Sobre Nosotros", href: "#about" },
  { name: "Como Funciona", href: "#proceso" },
  { name: "Cobertura Global", href: "#cobertura" },
  { name: "Certificaciones", href: "#certificaciones" },
  { name: "Trabaja con Nosotros", href: "#careers" },
];

const legal = [
  { name: "Aviso Legal", href: "/legal" },
  { name: "Politica de Privacidad", href: "/privacidad" },
  { name: "Terminos y Condiciones", href: "/terminos" },
  { name: "Politica de Cookies", href: "/cookies" },
];

const socials = [
  { name: "LinkedIn", icon: "tabler:brand-linkedin", href: "#" },
  { name: "Twitter", icon: "tabler:brand-x", href: "#" },
  { name: "Instagram", icon: "tabler:brand-instagram", href: "#" },
  { name: "Facebook", icon: "tabler:brand-facebook", href: "#" },
];
---

<footer class="relative bg-azul-marino-950 pt-20 pb-8 overflow-hidden">
  <!-- Background Elements -->
  <div class="absolute inset-0 opacity-[0.02]" style="background-image: linear-gradient(rgba(111,182,63,0.5) 1px, transparent 1px), linear-gradient(90deg, rgba(111,182,63,0.5) 1px, transparent 1px); background-size: 60px 60px;"></div>

  <div class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-azul-oceano-600/30 to-transparent"></div>

  <div class="relative max-w-7xl mx-auto px-4 md:px-8">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-12 gap-12 lg:gap-8 pb-16 border-b border-azul-oceano-600/20">

      <!-- Brand Column -->
      <div class="lg:col-span-4">
        <!-- Logo -->
        <a href="/" class="inline-flex items-center gap-3 mb-6 group">
           <img
          src="/logo/logo-company.png"
          alt="Roots & Routes Foods S.L.U"
          class="h-10 w-auto object-contain"
        />
          <div class="flex flex-col leading-tight">
          <span class="text-white font-bold text-xs tracking-tight">ROOTS & ROUTES</span>
          <span class="text-verde-global-400 text-[8px] font-semibold tracking-widest">FOODS</span>
          <span class="text-azul-oceano-400 text-[7px] tracking-[0.15em]">S.L.U</span>
        </div>
        </a>

        <p class="text-azul-marino-300 leading-relaxed mb-8 max-w-sm">
          Logistica internacional especializada en alimentos. Conectamos productores con mercados globales manteniendo la cadena de frio.
        </p>

        <!-- Contact Info -->
        <div class="space-y-4">
          <a href="tel:+34555540069" class="flex items-center gap-3 text-azul-marino-200 hover:text-verde-global-400 transition-colors group">
            <div class="w-10 h-10 bg-azul-marino-800/80 rounded-lg flex items-center justify-center group-hover:bg-verde-global-500/20 transition-colors">
              <Icon name="tabler:phone" class="w-5 h-5 text-verde-global-400" />
            </div>
            <div>
              <div class="text-xs text-azul-marino-500">Llamanos</div>
              <div class="font-medium">+34 555 540 069</div>
            </div>
          </a>

          <a href="mailto:info@roottsroutes.com" class="flex items-center gap-3 text-azul-marino-200 hover:text-verde-global-400 transition-colors group">
            <div class="w-10 h-10 bg-azul-marino-800/80 rounded-lg flex items-center justify-center group-hover:bg-verde-global-500/20 transition-colors">
              <Icon name="tabler:mail" class="w-5 h-5 text-verde-global-400" />
            </div>
            <div>
              <div class="text-xs text-azul-marino-500">Escribenos</div>
              <div class="font-medium">info@roottsroutes.com</div>
            </div>
          </a>
        </div>
      </div>

      <!-- Services Column -->
      <div class="lg:col-span-2">
        <h4 class="text-white font-bold mb-6 flex items-center gap-2">
          <span class="w-1.5 h-1.5 bg-verde-global-500 rounded-full"></span>
          Servicios
        </h4>
        <ul class="space-y-3">
          {services.map((item) => (
            <li>
              <a href={item.href} class="text-azul-marino-300 hover:text-verde-global-400 transition-colors text-sm flex items-center gap-2 group">
                <Icon name="tabler:chevron-right" class="w-3 h-3 opacity-0 -ml-5 group-hover:opacity-100 group-hover:ml-0 transition-all" />
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company Column -->
      <div class="lg:col-span-2">
        <h4 class="text-white font-bold mb-6 flex items-center gap-2">
          <span class="w-1.5 h-1.5 bg-verde-global-500 rounded-full"></span>
          Empresa
        </h4>
        <ul class="space-y-3">
          {company.map((item) => (
            <li>
              <a href={item.href} class="text-azul-marino-300 hover:text-verde-global-400 transition-colors text-sm flex items-center gap-2 group">
                <Icon name="tabler:chevron-right" class="w-3 h-3 opacity-0 -ml-5 group-hover:opacity-100 group-hover:ml-0 transition-all" />
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Legal Column -->
      <div class="lg:col-span-2">
        <h4 class="text-white font-bold mb-6 flex items-center gap-2">
          <span class="w-1.5 h-1.5 bg-verde-global-500 rounded-full"></span>
          Legal
        </h4>
        <ul class="space-y-3">
          {legal.map((item) => (
            <li>
              <a href={item.href} class="text-azul-marino-300 hover:text-verde-global-400 transition-colors text-sm flex items-center gap-2 group">
                <Icon name="tabler:chevron-right" class="w-3 h-3 opacity-0 -ml-5 group-hover:opacity-100 group-hover:ml-0 transition-all" />
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Newsletter Column -->
      <div class="lg:col-span-2">
        <h4 class="text-white font-bold mb-6 flex items-center gap-2">
          <span class="w-1.5 h-1.5 bg-verde-global-500 rounded-full"></span>
          Newsletter
        </h4>
        <p class="text-azul-marino-300 text-sm mb-4">
          Recibe actualizaciones sobre rutas y novedades del sector.
        </p>
        <form class="space-y-3">
          <div class="relative">
            <input
              type="email"
              placeholder="tu@email.com"
              class="w-full bg-azul-marino-800/80 border border-azul-oceano-600/30 rounded-xl px-4 py-3 text-white text-sm placeholder-azul-marino-500 focus:outline-none focus:border-verde-global-500/50 focus:ring-1 focus:ring-verde-global-500/25 transition-all"
            />
          </div>
          <button
            type="submit"
            class="w-full bg-verde-global-500 hover:bg-verde-global-400 text-azul-marino-950 font-bold py-3 px-4 rounded-xl transition-colors text-sm flex items-center justify-center gap-2"
          >
            <span>Suscribirse</span>
            <Icon name="tabler:send" class="w-4 h-4" />
          </button>
        </form>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="pt-8 flex flex-col md:flex-row justify-between items-center gap-6">
      <!-- Copyright -->
      <div class="text-azul-marino-400 text-sm text-center md:text-left">
        <span>{currentYear} Rootts & Routes Foods S.L.U. Todos los derechos reservados.</span>
      </div>

      <!-- Social Links -->
      <div class="flex items-center gap-3">
        {socials.map((social) => (
          <a
            href={social.href}
            aria-label={social.name}
            class="w-10 h-10 bg-azul-marino-800/60 hover:bg-verde-global-500/20 border border-azul-oceano-600/20 hover:border-verde-global-500/40 rounded-xl flex items-center justify-center text-azul-marino-400 hover:text-verde-global-400 transition-all"
          >
            <Icon name={social.icon} class="w-5 h-5" />
          </a>
        ))}
      </div>

      <!-- Back to Top -->
      <a
        href="#hero"
        class="flex items-center gap-2 text-azul-marino-400 hover:text-verde-global-400 transition-colors text-sm group"
      >
        <span>Volver arriba</span>
        <div class="w-8 h-8 bg-azul-marino-800/60 group-hover:bg-verde-global-500/20 border border-azul-oceano-600/20 group-hover:border-verde-global-500/40 rounded-lg flex items-center justify-center transition-all">
          <Icon name="tabler:arrow-up" class="w-4 h-4" />
        </div>
      </a>
    </div>
  </div>
</footer>
