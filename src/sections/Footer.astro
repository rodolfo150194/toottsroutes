---
import { Icon } from "astro-icon/components";
import ShapeDividerTop from "@components/ShapeDividerTop.astro";

interface Props {
  dividerFillColor?: string;
  showShapeDivider?: boolean;
}

const { dividerFillColor = "#f9fafb", showShapeDivider = true } = Astro.props;

const currentYear = new Date().getFullYear();

const services = [
  { name: "Transporte Maritimo", href: "#servicios" },
  { name: "Transporte Aereo", href: "#servicios" },
  { name: "Transporte Terrestre", href: "#servicios" },
  { name: "Almacenamiento", href: "#servicios" },
  { name: "Cadena de Frio", href: "#servicios" },
];

const company = [
  { name: "Sobre Nosotros", href: "#about" },
  { name: "Como Funciona", href: "#proceso" },
  { name: "Cobertura Global", href: "#cobertura" },
  { name: "Certificaciones", href: "#certificaciones" },
  { name: "Trabaja con Nosotros", href: "#careers" },
];

const legal = [
  { name: "Aviso Legal", href: "/legal" },
  { name: "Politica de Privacidad", href: "/privacidad" },
  { name: "Terminos y Condiciones", href: "/terminos" },
  { name: "Politica de Cookies", href: "/cookies" },
];

const socials = [
  { name: "LinkedIn", icon: "tabler:brand-linkedin", href: "#" },
  { name: "Twitter", icon: "tabler:brand-x", href: "#" },
  { name: "Instagram", icon: "tabler:brand-instagram", href: "#" },
  { name: "Facebook", icon: "tabler:brand-facebook", href: "#" },
];
---

<footer class={`relative bg-azul-marino-950 pb-8 overflow-hidden ${showShapeDivider ? 'pt-20 md:pt-32' : 'pt-12 md:pt-16'}`}>
  {showShapeDivider && (
    <>
      <ShapeDividerTop
        fillColor={dividerFillColor}
        borderColor="#6FB63F"
        notchHeight={35}
        notchStart={120}
        notchPeak={140}
        className="hidden md:block"
      />
      <ShapeDividerTop
        fillColor={dividerFillColor}
        borderColor="#6FB63F"
        notchHeight={25}
        notchStart={60}
        notchPeak={80}
        borderSize={4}
        className="md:hidden"
      />
    </>
  )}

  <!-- Background Elements -->
  <div class="absolute inset-0 opacity-[0.02]" style="background-image: linear-gradient(rgba(111,182,63,0.5) 1px, transparent 1px), linear-gradient(90deg, rgba(111,182,63,0.5) 1px, transparent 1px); background-size: 60px 60px;"></div>

  <div class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-azul-oceano-600/30 to-transparent"></div>

  <div class="relative max-w-7xl mx-auto px-4 md:px-8">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-2 md:grid-cols-2 lg:grid-cols-12 gap-6 md:gap-12 lg:gap-8 pb-12 md:pb-16 border-b border-azul-oceano-600/20">

      <!-- Brand Column -->
      <div class="col-span-2 lg:col-span-4">
        <!-- Logo -->
        <a href="/" class="inline-flex items-center gap-2 md:gap-3 mb-4 md:mb-6 group">
           <img
          src="/logo/logo-company.png"
          alt="Roots & Routes Foods S.L.U"
          class="h-8 md:h-10 w-auto object-contain"
        />
          <div class="flex flex-col leading-tight">
          <span class="text-white font-bold text-[10px] md:text-xs tracking-tight">ROOTS & ROUTES</span>
          <span class="text-verde-global-400 text-[7px] md:text-[8px] font-semibold tracking-widest">FOODS</span>
          <span class="text-azul-oceano-400 text-[6px] md:text-[7px] tracking-[0.15em]">S.L.U</span>
        </div>
        </a>

        <p class="text-azul-marino-300 leading-relaxed mb-5 md:mb-8 max-w-sm text-sm md:text-base">
          Logistica internacional especializada en alimentos. Conectamos productores con mercados globales.
        </p>

        <!-- Contact Info -->
        <div class="flex flex-col sm:flex-row lg:flex-col gap-3 md:gap-4">
          <a href="tel:+34555540069" class="flex items-center gap-2 md:gap-3 text-azul-marino-200 hover:text-verde-global-400 transition-colors group">
            <div class="w-9 h-9 md:w-10 md:h-10 bg-azul-marino-800/80 rounded-lg flex items-center justify-center group-hover:bg-verde-global-500/20 transition-colors flex-shrink-0">
              <Icon name="tabler:phone" class="w-4 h-4 md:w-5 md:h-5 text-verde-global-400" />
            </div>
            <div>
              <div class="text-[10px] md:text-xs text-azul-marino-500">Llamanos</div>
              <div class="font-medium text-sm md:text-base">+34 555 540 069</div>
            </div>
          </a>

          <a href="mailto:info@roottsroutes.com" class="flex items-center gap-2 md:gap-3 text-azul-marino-200 hover:text-verde-global-400 transition-colors group">
            <div class="w-9 h-9 md:w-10 md:h-10 bg-azul-marino-800/80 rounded-lg flex items-center justify-center group-hover:bg-verde-global-500/20 transition-colors flex-shrink-0">
              <Icon name="tabler:mail" class="w-4 h-4 md:w-5 md:h-5 text-verde-global-400" />
            </div>
            <div>
              <div class="text-[10px] md:text-xs text-azul-marino-500">Escribenos</div>
              <div class="font-medium text-sm md:text-base">info@roottsroutes.com</div>
            </div>
          </a>
        </div>
      </div>

      <!-- Services Column -->
      <div class="col-span-1 lg:col-span-2">
        <h4 class="text-white font-bold mb-4 md:mb-6 flex items-center gap-2 text-sm md:text-base">
          <span class="w-1.5 h-1.5 bg-verde-global-500 rounded-full"></span>
          Servicios
        </h4>
        <ul class="space-y-2 md:space-y-3">
          {services.map((item) => (
            <li>
              <a href={item.href} class="text-azul-marino-300 hover:text-verde-global-400 transition-colors text-xs md:text-sm flex items-center gap-2 group">
                <Icon name="tabler:chevron-right" class="w-3 h-3 opacity-0 -ml-5 group-hover:opacity-100 group-hover:ml-0 transition-all hidden md:block" />
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company Column -->
      <div class="col-span-1 lg:col-span-2">
        <h4 class="text-white font-bold mb-4 md:mb-6 flex items-center gap-2 text-sm md:text-base">
          <span class="w-1.5 h-1.5 bg-verde-global-500 rounded-full"></span>
          Empresa
        </h4>
        <ul class="space-y-2 md:space-y-3">
          {company.map((item) => (
            <li>
              <a href={item.href} class="text-azul-marino-300 hover:text-verde-global-400 transition-colors text-xs md:text-sm flex items-center gap-2 group">
                <Icon name="tabler:chevron-right" class="w-3 h-3 opacity-0 -ml-5 group-hover:opacity-100 group-hover:ml-0 transition-all hidden md:block" />
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Legal Column -->
      <div class="col-span-1 lg:col-span-2">
        <h4 class="text-white font-bold mb-4 md:mb-6 flex items-center gap-2 text-sm md:text-base">
          <span class="w-1.5 h-1.5 bg-verde-global-500 rounded-full"></span>
          Legal
        </h4>
        <ul class="space-y-2 md:space-y-3">
          {legal.map((item) => (
            <li>
              <a href={item.href} class="text-azul-marino-300 hover:text-verde-global-400 transition-colors text-xs md:text-sm flex items-center gap-2 group">
                <Icon name="tabler:chevron-right" class="w-3 h-3 opacity-0 -ml-5 group-hover:opacity-100 group-hover:ml-0 transition-all hidden md:block" />
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Newsletter Column - Full width on mobile -->
      <div class="col-span-2 lg:col-span-2">
        <h4 class="text-white font-bold mb-3 md:mb-4 flex items-center gap-2 text-sm md:text-base">
          <span class="w-1.5 h-1.5 bg-verde-global-500 rounded-full"></span>
          Newsletter
        </h4>
        <div class="flex flex-col sm:flex-row lg:flex-col gap-3">
          <p class="text-azul-marino-300 text-xs md:text-sm sm:flex-1 lg:flex-none">
            Recibe actualizaciones sobre rutas y novedades del sector.
          </p>
          <form class="flex flex-col sm:flex-row lg:flex-col gap-2 sm:flex-1 lg:flex-none">
            <input
              type="email"
              placeholder="tu@email.com"
              class="flex-1 bg-azul-marino-800/80 border border-azul-oceano-600/30 rounded-lg md:rounded-xl px-3 md:px-4 py-2.5 md:py-3 text-white text-xs md:text-sm placeholder-azul-marino-500 focus:outline-none focus:border-verde-global-500/50 focus:ring-1 focus:ring-verde-global-500/25 transition-all"
            />
            <button
              type="submit"
              class="bg-verde-global-500 hover:bg-verde-global-400 text-azul-marino-950 font-bold py-2.5 md:py-3 px-4 rounded-lg md:rounded-xl transition-colors text-xs md:text-sm flex items-center justify-center gap-2 whitespace-nowrap"
            >
              <span>Suscribirse</span>
              <Icon name="tabler:send" class="w-4 h-4" />
            </button>
          </form>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="pt-6 md:pt-8 flex flex-col md:flex-row justify-between items-center gap-4 md:gap-6">
      <!-- Social Links - First on mobile -->
      <div class="flex items-center gap-2 md:gap-3 order-1 md:order-2">
        {socials.map((social) => (
          <a
            href={social.href}
            aria-label={social.name}
            class="w-9 h-9 md:w-10 md:h-10 bg-azul-marino-800/60 hover:bg-verde-global-500/20 border border-azul-oceano-600/20 hover:border-verde-global-500/40 rounded-lg md:rounded-xl flex items-center justify-center text-azul-marino-400 hover:text-verde-global-400 transition-all"
          >
            <Icon name={social.icon} class="w-4 h-4 md:w-5 md:h-5" />
          </a>
        ))}
      </div>

      <!-- Copyright -->
      <div class="text-azul-marino-400 text-xs md:text-sm text-center md:text-left order-3 md:order-1">
        <span>{currentYear} Rootts & Routes Foods S.L.U.</span>
        <span class="hidden sm:inline"> Todos los derechos reservados.</span>
      </div>

      <!-- Back to Top -->
      <a
        href="#hero"
        class="flex items-center gap-2 text-azul-marino-400 hover:text-verde-global-400 transition-colors text-xs md:text-sm group order-2 md:order-3"
      >
        <span class="hidden sm:inline">Volver arriba</span>
        <div class="w-8 h-8 bg-azul-marino-800/60 group-hover:bg-verde-global-500/20 border border-azul-oceano-600/20 group-hover:border-verde-global-500/40 rounded-lg flex items-center justify-center transition-all">
          <Icon name="tabler:arrow-up" class="w-4 h-4" />
        </div>
      </a>
    </div>
  </div>
</footer>
