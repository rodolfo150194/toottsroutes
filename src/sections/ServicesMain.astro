<section class="services-main relative py-24 bg-white overflow-hidden">
    <!-- Decorative elements -->
    <div class="absolute top-0 right-0 w-96 h-96 bg-[#ff6b35]/5 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 left-0 w-96 h-96 bg-blue-500/5 rounded-full blur-3xl"></div>

    <div class="container-custom relative z-10 px-6 md:px-12">
        <!-- Section header -->
        <div class="text-center mb-16">
            <div class="inline-block mb-4">
                <span class="text-[#ff6b35] font-mono text-sm font-bold tracking-wider uppercase border border-[#ff6b35] px-4 py-2 rounded-full">
                    Our Services
                </span>
            </div>
            <h2 class="text-4xl md:text-6xl font-bold text-gray-900 mb-6">
                Complete Logistics
                <span class="block text-[#ff6b35]">Solutions</span>
            </h2>
            <p class="text-xl text-gray-600 max-w-2xl mx-auto">
                From massive container shipments to express parcels, we handle every scale of logistics with precision.
            </p>
        </div>

        <!-- Services grid - Container style layout -->
        <div class="grid md:grid-cols-2 gap-8 max-w-6xl mx-auto">
            <!-- Container Shipping -->
            <div class="service-card group relative bg-gradient-to-br from-[#0a1628] to-[#162847] rounded-2xl p-8 overflow-hidden border-4 border-[#ff6b35]">
                <!-- Corner decorations -->
                <div class="absolute top-0 left-0 w-16 h-16 border-l-4 border-t-4 border-[#ff6b35]/50"></div>
                <div class="absolute top-0 right-0 w-16 h-16 border-r-4 border-t-4 border-[#ff6b35]/50"></div>
                <div class="absolute bottom-0 left-0 w-16 h-16 border-l-4 border-b-4 border-[#ff6b35]/50"></div>
                <div class="absolute bottom-0 right-0 w-16 h-16 border-r-4 border-b-4 border-[#ff6b35]/50"></div>

                <!-- Grid background -->
                <div class="absolute inset-0 opacity-5" style="background-image: linear-gradient(white 1px, transparent 1px), linear-gradient(90deg, white 1px, transparent 1px); background-size: 20px 20px;"></div>

                <div class="relative z-10">
                    <!-- Icon -->
                    <div class="w-20 h-20 bg-[#ff6b35] rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
                        <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                        </svg>
                    </div>

                    <h3 class="text-3xl font-bold text-white mb-4">
                        Container Shipping
                    </h3>

                    <p class="text-gray-300 mb-6 leading-relaxed">
                        Full Container Load (FCL) and Less than Container Load (LCL) services. We move your cargo across continents with efficiency and security.
                    </p>

                    <!-- Features list -->
                    <ul class="space-y-3 mb-8">
                        <li class="flex items-start gap-3">
                            <svg class="w-5 h-5 text-[#ff6b35] mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span class="text-gray-300">20ft & 40ft containers</span>
                        </li>
                        <li class="flex items-start gap-3">
                            <svg class="w-5 h-5 text-[#ff6b35] mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span class="text-gray-300">Refrigerated & special cargo</span>
                        </li>
                        <li class="flex items-start gap-3">
                            <svg class="w-5 h-5 text-[#ff6b35] mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span class="text-gray-300">Door-to-door service</span>
                        </li>
                        <li class="flex items-start gap-3">
                            <svg class="w-5 h-5 text-[#ff6b35] mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span class="text-gray-300">Real-time tracking</span>
                        </li>
                    </ul>

                    <!-- CTA -->
                    <button class="w-full bg-[#ff6b35] text-white py-3 px-6 rounded-lg font-semibold hover:bg-[#f7931e] transition-colors flex items-center justify-center gap-2 group/btn">
                        <span>Learn More</span>
                        <svg class="w-5 h-5 group-hover/btn:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                        </svg>
                    </button>
                </div>

                <!-- Container image overlay -->
                <div class="absolute -bottom-10 -right-10 opacity-10 group-hover:opacity-20 transition-opacity">
                    <svg width="200" height="200" viewBox="0 0 200 200" fill="none">
                        <rect x="20" y="40" width="60" height="40" fill="white" opacity="0.5"/>
                        <rect x="20" y="85" width="60" height="40" fill="white" opacity="0.3"/>
                        <rect x="85" y="40" width="60" height="40" fill="white" opacity="0.4"/>
                        <rect x="85" y="85" width="60" height="40" fill="white" opacity="0.6"/>
                    </svg>
                </div>
            </div>

            <!-- Parcel Service -->
            <div class="service-card group relative bg-gradient-to-br from-white to-gray-50 rounded-2xl p-8 overflow-hidden border-4 border-gray-200 hover:border-[#ff6b35] transition-colors">
                <!-- Corner decorations -->
                <div class="absolute top-0 left-0 w-16 h-16 border-l-4 border-t-4 border-gray-300 group-hover:border-[#ff6b35] transition-colors"></div>
                <div class="absolute top-0 right-0 w-16 h-16 border-r-4 border-t-4 border-gray-300 group-hover:border-[#ff6b35] transition-colors"></div>
                <div class="absolute bottom-0 left-0 w-16 h-16 border-l-4 border-b-4 border-gray-300 group-hover:border-[#ff6b35] transition-colors"></div>
                <div class="absolute bottom-0 right-0 w-16 h-16 border-r-4 border-b-4 border-gray-300 group-hover:border-[#ff6b35] transition-colors"></div>

                <!-- Dotted background -->
                <div class="absolute inset-0 opacity-5" style="background-image: radial-gradient(circle, #ff6b35 1px, transparent 1px); background-size: 20px 20px;"></div>

                <div class="relative z-10">
                    <!-- Icon -->
                    <div class="w-20 h-20 bg-gray-900 rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 group-hover:bg-[#ff6b35] transition-all">
                        <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
                        </svg>
                    </div>

                    <h3 class="text-3xl font-bold text-gray-900 mb-4">
                        Express Parcels
                    </h3>

                    <p class="text-gray-600 mb-6 leading-relaxed">
                        Fast, reliable parcel delivery services for businesses and individuals. From documents to packages, we deliver on time, every time.
                    </p>

                    <!-- Features list -->
                    <ul class="space-y-3 mb-8">
                        <li class="flex items-start gap-3">
                            <svg class="w-5 h-5 text-[#ff6b35] mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span class="text-gray-700">Express & standard delivery</span>
                        </li>
                        <li class="flex items-start gap-3">
                            <svg class="w-5 h-5 text-[#ff6b35] mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span class="text-gray-700">International coverage</span>
                        </li>
                        <li class="flex items-start gap-3">
                            <svg class="w-5 h-5 text-[#ff6b35] mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span class="text-gray-700">Secure packaging</span>
                        </li>
                        <li class="flex items-start gap-3">
                            <svg class="w-5 h-5 text-[#ff6b35] mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span class="text-gray-700">SMS & email notifications</span>
                        </li>
                    </ul>

                    <!-- CTA -->
                    <button class="w-full bg-gray-900 text-white py-3 px-6 rounded-lg font-semibold hover:bg-[#ff6b35] transition-colors flex items-center justify-center gap-2 group/btn">
                        <span>Learn More</span>
                        <svg class="w-5 h-5 group-hover/btn:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                        </svg>
                    </button>
                </div>

                <!-- Package icon overlay -->
                <div class="absolute -bottom-10 -right-10 opacity-10 group-hover:opacity-20 transition-opacity">
                    <svg width="200" height="200" viewBox="0 0 200 200" fill="none">
                        <rect x="60" y="60" width="80" height="80" stroke="currentColor" stroke-width="4" fill="none"/>
                        <path d="M100 60 L100 140 M60 100 L140 100" stroke="currentColor" stroke-width="4"/>
                    </svg>
                </div>
            </div>
        </div>

        <!-- Additional services banner -->
        <div class="mt-16 max-w-4xl mx-auto">
            <div class="bg-gradient-to-r from-[#0a1628] via-[#ff6b35] to-[#0a1628] rounded-2xl p-1">
                <div class="bg-white rounded-xl p-8">
                    <div class="grid md:grid-cols-4 gap-6 text-center">
                        <div>
                            <div class="text-3xl mb-2">ðŸ“¦</div>
                            <div class="font-bold text-gray-900">Warehousing</div>
                            <div class="text-sm text-gray-600 mt-1">Storage solutions</div>
                        </div>
                        <div>
                            <div class="text-3xl mb-2">ðŸ›ƒ</div>
                            <div class="font-bold text-gray-900">Customs</div>
                            <div class="text-sm text-gray-600 mt-1">Clearance services</div>
                        </div>
                        <div>
                            <div class="text-3xl mb-2">ðŸšš</div>
                            <div class="font-bold text-gray-900">Transport</div>
                            <div class="text-sm text-gray-600 mt-1">Ground delivery</div>
                        </div>
                        <div>
                            <div class="text-3xl mb-2">ðŸ’¼</div>
                            <div class="font-bold text-gray-900">Consulting</div>
                            <div class="text-sm text-gray-600 mt-1">Logistics advisory</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .container-custom {
        max-width: 1400px;
        margin: 0 auto;
    }

    .service-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .service-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 60px rgba(255, 107, 53, 0.3);
    }
</style>
