---
import "@/styles/global.css";

const CHATWOOT_BASE_URL = import.meta.env.PUBLIC_CHATWOOT_BASE_URL || '';
const CHATWOOT_TOKEN = import.meta.env.PUBLIC_CHATWOOT_WEBSITE_TOKEN || '';
---
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width"/>
    <link rel="icon" type="image/svg+xml" href="/images/logo/logo-company.png"/>
    <meta name="generator" content={Astro.generator}/>
    <title>Rootts & Routes Food, S.L.U</title>
</head>
<body>
<div id="background-mask " class="min-h-screen w-full bg-gray-50">
    <slot/>
</div>

{CHATWOOT_BASE_URL && CHATWOOT_TOKEN && (
  <script
    is:inline
    define:vars={{ chatwootBaseUrl: CHATWOOT_BASE_URL, chatwootToken: CHATWOOT_TOKEN }}
  >
    window.chatwootSettings = {
      locale: 'es',
      position: 'right',
      type: 'standard',
      launcherTitle: 'Chatea con nosotros',
    };

    (function(d, t) {
      var BASE_URL = chatwootBaseUrl;
      var g = d.createElement(t);
      var s = d.getElementsByTagName(t)[0];
      g.src = BASE_URL + '/packs/js/sdk.js';
      g.defer = true;
      g.async = true;
      s.parentNode.insertBefore(g, s);
      g.onload = function() {
        window.chatwootSDK.run({
          websiteToken: chatwootToken,
          baseUrl: BASE_URL
        });
      };
    })(document, 'script');
  </script>
)}
</body>
</html>

<style is:global>


</style>
