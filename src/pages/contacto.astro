<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
<script is:inline src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<script is:inline>
  document.addEventListener('DOMContentLoaded', function() {
    const mapContainers = document.querySelectorAll('[id^="map-"]');

    mapContainers.forEach(container => {
      const lat = parseFloat(container.dataset.lat);
      const lng = parseFloat(container.dataset.lng);
      const name = container.dataset.name;

      const map = L.map(container.id).setView([lat, lng], 15);

      L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '&copy; OpenStreetMap contributors'
      }).addTo(map);

      const customIcon = L.divIcon({
        className: 'custom-marker',
        html: `<div style="background-color: #6FB63F; width: 32px; height: 32px; border-radius: 50% 50% 50% 0; transform: rotate(-45deg); border: 3px solid white; box-shadow: 0 2px 8px rgba(0,0,0,0.3);"></div>`,
        iconSize: [32, 32],
        iconAnchor: [16, 32],
        popupAnchor: [0, -32]
      });

      L.marker([lat, lng], { icon: customIcon })
        .addTo(map)
        .bindPopup(`<strong>${name}</strong><br>Rootts & Routes Foods S.L.U`)
        .openPopup();
    });
  });
</script>

<style>
  .leaflet-popup-content-wrapper {
    border-radius: 12px;
